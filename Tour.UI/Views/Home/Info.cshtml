@model Tour.UI.Models.FlightViewModel;
@{
    ViewData["Title"] = "TourInfo";
}

<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="        background-image: url('../assert/img/@Model.name/img_1.jpg')">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">
                <div class="row row-mt-15em">

                    <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                        <h1>Chi tiết chuyến đi</h1>
                    </div>

                </div>
            </div>
        </div>
    </div>
</header>

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2>@Model.name</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <div style="margin-bottom: 35px; display: table; table-layout: fixed; width: 100%; " class="carosuel-c">
                    <div style="position: relative; overflow: hidden; display: block; margin: 0; padding: 0;">
                        <div style="width:774px;">
                            <img src="~/assert/img/@Model.name/img_1.jpg" alt="img" class="w-100 d-block" />
                        </div>
                    </div>
                </div>
                <div style="margin-bottom: 40px;">
                    <div class="collapse" id="collapseExample">
                        <div style="margin-bottom: 10px; padding-bottom: 10px; border-bottom: solid 1px rgba(0,0,0,.15);">
                            Bình luận
                        </div>
                        <div style="padding-left: 30px; position: relative; word-break: break-all;">
                            <form>
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Bình luận ..."></textarea>
                                </div>
                                <button type="button" class="btn btn-primary pull-right">Đăng</button>
                            </form>
                            <div class="mt-5">
                                @foreach (var itemNew in ViewBag.News)
                                {
                                    @foreach (var itemComment in ViewBag.Comment)
                                    {
                                        @if (itemComment.newsId == itemNew.newsId)
                                        {
                                            <div class="p-3 mb-3 bg-light rounded-lg">
                                                <div class="row pb-2">
                                                    <div class="col-md-12">
                                                        <img src="~/assert/images/loader.gif" style="width:40px;height:40px;" />
                                                        <a href="javascript:void(0);" class="h5 pl-3">User</a>
                                                    </div>
                                                </div>
                                                <div class="row pb-2">
                                                    <div class="col-md-12 text-break h6">
                                                        @itemComment.content
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col">
                                                        <small class="text-muted pull-right">a day ago</small>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="collapse" id="collapseExample3">
                        <div style="margin-bottom: 10px; padding-bottom: 10px; border-bottom: solid 1px rgba(0,0,0,.15);">
                            Chi tiết chuyến đi
                        </div>
                        <div style="padding-left: 30px; position: relative; word-break: break-all;">
                            @Model.description
                        </div>
                    </div>
                    <div class="collapse" id="collapseExample2">
                        <div style="margin-bottom: 10px; padding-bottom: 10px; border-bottom: solid 1px rgba(0,0,0,.15);">
                            Bài viết
                        </div>
                        <div style="padding-left: 30px; position: relative;">
                            @foreach (var itemNew in ViewBag.News)
                            {
                                <div style="margin-bottom: 15px; border-bottom: solid 1px rgba(0,0,0,.15);">
                                    <div style="position: relative;">
                                        @itemNew.title
                                        <a>| @itemNew.category</a>
                                    </div>
                                    <div style="display: block;">
                                        <div style="text-align: justify; word-break: break-all; ">
                                            @itemNew.description
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <h2>@Model.name</h2>
                <ul style="list-style: none; margin-bottom: 25px;">
                    <li style="padding-bottom:10px; margin-bottom:10px; display:inline-table; width:100%;">
                        <div style="width:100px; float:left;">
                            Mã
                        </div>
                        <div style="overflow:hidden;">
                            @Model.Id
                        </div>
                    </li>
                    <li style="padding-bottom:10px; margin-bottom:10px; display:inline-table; width:100%;">
                        <div style="width:100px; float:left;">
                            Ngày đi
                        </div>
                        <div style="overflow:hidden;">
                            @Model.date
                        </div>
                    </li>
                    <li style="padding-bottom:10px; margin-bottom:10px; display:inline-table; width:100%;">
                        <div style="width:100px; float:left;">
                            Số lượng
                        </div>
                        <div style="overflow:hidden;">
                            @Model.stock
                        </div>
                    </li>
                    <li style="padding-bottom:10px; margin-bottom:10px; display:inline-table; width:100%;">
                        <div style="width:100px; float:left;">
                            Thời gian đi
                        </div>
                        <div style="overflow:hidden;">
                            @Model.duaration
                        </div>
                    </li>
                </ul>
                <div style="margin-bottom: 25px;">
                    <div style="background: #09C6AB; color: #fff; display: flex; align-items: center; padding: 10px; ">
                        <div style="border-right: solid 1px #fff;">
                            <div style="margin-right: 5px; ">Người lớn</div>
                            <div id="pAdult" style="font-size: 25px; line-height: 33px; font-weight: 700; margin-right: 5px;"></div>
                        </div>
                        <div style="padding-left: 5px">
                            <div style="margin-right: 5px; ">Trẻ em</div>
                            <div id="pChild" style="font-size: 25px; line-height: 33px; font-weight: 700; margin-right: 5px;"></div>
                        </div>
                    </div>
                </div>
                <div class="c" style="background: #707271; margin-bottom: 25px;">
                    <ul style=" list-style: none; padding: 0px;">
                        <li style="border-bottom: solid 1px #fff; padding: 10px; ">
                            <a data-toggle="collapse" href="#collapseExample3" role="button" aria-expanded="false" aria-controls="collapseExample3" style="color: #ffffff;">Chi tiết chuyến đi</a>
                        </li>
                        <li style="border-bottom: solid 1px #fff; padding: 10px; ">
                            <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" style="color: #ffffff;">Bình luận</a>
                        </li>
                        <li style="border-bottom: solid 1px #fff; padding: 10px; ">
                            <a data-toggle="collapse" href="#collapseExample2" role="button" aria-expanded="false" aria-controls="collapseExample2" style="color: #ffffff;">Bài viết</a>
                        </li>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-md-8 col-sm-8">
                        <div class="fh5co-card-item" style=" width: 52%; height: 44px; ">
                            <div class="fh5co-text">
                                <p><a href="@Url.Action("Pay", "Home", new { flightId = Model.Id })"><span class="btn btn-primary">Đặt vé</span></a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
        </div>
    </div>
</div>

<script>
    var obj = @Html.Raw(Json.Serialize(ViewBag.Ticket))
    var adult = obj[0]
    var child = obj[1]
    
    document.getElementById('pAdult').innerHTML = `${new Intl.NumberFormat().format(adult.price * @Model.tigia)} VND`
    document.getElementById('pChild').innerHTML = `${new Intl.NumberFormat().format(child.price * @Model.tigia)} VND`
</script>
