@using Microsoft.AspNetCore.Routing
@using Tour.Admin
@model Tour.Admin.Models.SysMenuUserVM
<!-- /.card-header -->
<div class="card-body">
    <div class="table-responsive" style="grid-auto-columns:auto">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th colspan="3">Menu</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.ListMenuUser != null && Model.ListMenuUser.Count > 0)
                {
                    foreach (var item in Model.ListMenuUser)
                    {
                        <tr>
                            <!--Col 1-->
                            <td style="width:25%">
                                <div class="row">
                                    <div class="col-md-3">
                                        Mã:
                                    </div>
                                    <div class="col-md-9"><span class="fa fa-code"></span> @item.menuCode</div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        Tên Menu:
                                    </div>
                                    <div class="col-md-9"><span class="fa fa-user"></span> @item.menuTitleCde</div>
                                </div>
                            </td>
                            <!-- col 2-->
                            <td style="width:25%">
                                <div class="row">
                                    <div class="col-md-3">
                                        Menu Cha:
                                    </div>
                                    <div class="col-md-9"><span class="fa fa-code"></span> @item.parentMenuCde</div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        Action:
                                    </div>
                                    <div class="col-md-9"><span class="fa fa-user"></span> @item.actionOrClass</div>
                                </div>
                            </td>
                            <!-- col 3-->
                            <td style="width:25%">
                                <div class="row">
                                    <div class="col-md-4">
                                        Controller:
                                    </div>
                                    <div class="col-md-12"><span class="fa fa-user"></span> @item.controller</div>
                                </div>
                            </td>
                            <td class="text-center">
                                <a href="javascript:void(0);"
                                   data-href=".popup-modal"
                                   class="btn btn-radius-left btn-info br2 btn-xs fs12 m1 dsoft-btn-show-popup"
                                   data-event="popup-modal"
                                   data-url="@Url.Action("_Update", "Menu", new { menuID = item.id  })"
                                   data-title="Cập nhật"
                                   data-width="800"
                                   data-height="600">
                                    <span class='fa fa-edit'></span>Cập nhật
                                </a>

                                <a href="javascript:void(0);"
                                   data-message-confirm="Bạn có chắc muốn xóa"
                                   action="@Url.Action("_Delete", "Menu",new { menuID = item.id })"
                                   data-id="@item.id"
                                   class="btn btn-sm btn-danger btn-radius-right btn-delete btnDelete">
                                    <span class="fa fa-trash"></span>Xóa
                                </a><br />
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>
<!-- /.card-body -->
<div class="card-footer clearfix">
    @if (Model.ListMenuUser != null && Model.ListMenuUser.Count > 0)
    {
        @HtmlPageHelper.Paging(this.Url, @Model.ListMenuUser[0].totalRows, "_Index", "SysUsrUser", "divListDetail",
        new RouteValueDictionary() {
            { "p", Model.p },
            { "keyWord",Model.keyWord}
         })
    }
</div>